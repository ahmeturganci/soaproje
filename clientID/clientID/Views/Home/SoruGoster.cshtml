
@{
    ViewBag.Title = "Soru Detay";
    Layout = "~/Views/Shared/_MainShared.cshtml";
}
<div class="row" id="soruDetay">
    <div class="col-md-12">
        <div class="card">
            <div class="header">
                <h4 class="title">Soru Detay</h4>
            </div>
            <div id="sDetay">

            </div>
        </div>
    </div>
</div>

<script>
    $("#soruDetay").load(SoruCek());
    function SoruCek() {
        var url = window.location.pathname;
        var id = url.substring(url.lastIndexOf('/') + 1);
        alert(id);
        var data = {
            soruId: id
        };
        console.log(data);
        $.post("/Home/SoruCek", data, function (data) {
            $("#sDetay  ").append('<div class="typo-line"><p class="category">' + data.KategoriAd + '</p><blockquote><p class="text-primary"><b>' + data.KullaniciAd + 'kullanıcı soruyor;</b></p><p text-success><b>' + data.Baslik + '</b></p><p>' + data.Icerik + '</p><small>' + data.YayinTarihi + '</small></blockquote><strong>' + data.OnayDurum + '</strong></div>');
        });




    }

</script>
